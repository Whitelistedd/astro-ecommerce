---
import { Category } from "components/shared/Category/Category";
import SpeakerSRC from "../../../../../public/assets/home/image-speaker-zx9.png";
import { NavItems } from "components/shared/Navbar/Navbar";
import styles from "./Products.module.less";
---

<section class={styles.container}>
  <section class={styles.container__wrapper}>
    <div class={styles.container__categories}>
      {NavItems.slice(1).map((item, index) => <Category item={item} />)}
    </div>
  </section>
  <section class={styles.container__wrapper}>
    <div class={styles.container__mainProduct}>
      <img
        class={styles.container__mainProductImage}
        src={"/assets/home/image-speaker-zx9.png"}
        alt={"zx9-speaker"}
      />
      <img
        class={styles.container__mainProductBG}
        src={"/assets/home/pattern-circles.svg"}
      />
      <div class={styles.container__mainProductDetails}>
        <h1 class={styles.container__title}>ZX9 SPEAKER</h1>
        <p class={styles.container__desc}>
          Upgrade to premium speakers that are phenomenally built to deliver
          truly remarkable sound.
        </p>
        <button class={styles.container__mainProductButton}>
          SEE PRODUCT
        </button>
      </div>
    </div>
    <div>w</div>
  </section>
</section>
