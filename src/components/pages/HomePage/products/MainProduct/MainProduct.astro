---
import styles from "./MainProduct.module.less";
---

<div class={styles.mainProduct}>
  <img
    class={styles.mainProduct__mainProductImage}
    src={"/assets/home/image-speaker-zx9.png"}
    alt={"zx9-speaker"}
    width="410.23px"
    height="498px"
  />
  <img
    class={styles.mainProduct__mainProductBG}
    src={"/assets/home/pattern-circles.svg"}
    width="950px"
    height="950px"
  />
  <div class={styles.mainProduct__mainProductDetails}>
    <h1 class={styles.mainProduct__title}>ZX9 SPEAKER</h1>
    <p class={styles.mainProduct__desc}>
      Upgrade to premium speakers that are phenomenally built to deliver truly
      remarkable sound.
    </p>
    <a href="/product/ZX9-SPEAKER/5">
      <button class={`btn-secondary ${styles.mainProduct__mainProductButton}`}>
        SEE PRODUCT
      </button>
    </a>
  </div>
</div>
